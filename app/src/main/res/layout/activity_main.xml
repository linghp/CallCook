<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" android:background="@color/bg_gray">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal" >

        <com.peoit.callcook.ui.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon1="@mipmap/ic_menu_start_conversation"
            app:text="@string/tab_home"
            app:text_size="12sp"
            app:text_color="@color/txt_white1"
            app:color1="@color/green500" />

        <com.peoit.callcook.ui.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon1="@mipmap/ic_menu_friendslist"
            app:text="@string/tab_find"
            app:text_size="12sp"
            app:text_color="@color/txt_white1"
            app:color1="@color/green500" />

        <com.peoit.callcook.ui.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon1="@mipmap/ic_menu_emoticons"
            app:text="@string/tab_orders"
            app:text_size="12sp"
            app:text_color="@color/txt_white1"
            app:color1="@color/green500" />

        <com.peoit.callcook.ui.view.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:icon1="@mipmap/ic_menu_allfriends"
            app:text="@string/tab_mime"
            app:text_size="12sp"
            app:text_color="@color/txt_white1"
            app:color1="@color/green500" />
    </LinearLayout>
</LinearLayout>
